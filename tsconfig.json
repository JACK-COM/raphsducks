{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "commonJs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib/",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
    "useDefineForClassFields": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./lib", "./**/*.test.*"]
}
